{
  "name": "terraform",
  "version": "0.1.0",
  "description": "AWS Environment Deployment.",
  "main": "index.js",
  "scripts": {
    "platform:install": "npm run platform:install:website && npm install",
    "platform:install:website": "cd Platform/Websites/Marketing && npm install",
    "platform:build:lambdas": "webpack --config Platform/Lambdas/webpack.config.babel.js -p --progress --colors",
    "platform:build:website": "cd Platform/Websites/Marketing && npm run build",
    "platform:plan": "cd Platform && terraform plan -var-file=\".aws.tfvars\" -var-file=\".platform.tfvars\"",
    "platform:deploy": "npm run platform:build:lambdas && cd Platform && terraform apply -var-file=\".aws.tfvars\" -var-file=\".platform.tfvars\" && cd .. && npm run platform:deploy:website",
    "platform:deploy:website": "npm run platform:build:website && cd Platform/Websites/Marketing/dist && aws s3 sync . s3://wessels.nz --profile=wessels-admin",
    "product:lambdas:build": "webpack --config Product/Lambdas/webpack.config.babel.js -p --progress --colors",
    "product:plan": "cd Platform && terraform plan -var-file=\".aws.tfvars\" -var-file=\".platform.tfvars\"",
    "product:deploy": "npm run product:lambdas:build && cd Platform && terraform apply -var-file=\".aws.tfvars\" -var-file=\".platform.tfvars\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BerndWessels/terraform.git"
  },
  "author": "Bernd Wessels <wesselsbernd@gmail.com> (https://github.com/BerndWessels)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BerndWessels/terraform/issues"
  },
  "homepage": "https://github.com/BerndWessels/terraform#readme",
  "devDependencies": {
    "aws-sdk": "^2.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-0": "^6.0.0",
    "clean-webpack-plugin": "^0.1.0",
    "graphql": "^0.6.0",
    "json-loader": "^0.5.0",
    "jszip": "^3.0.0",
    "webpack": "^1.0.0",
    "yargs": "^4.0.0"
  }
}
